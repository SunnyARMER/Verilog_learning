module top_module(
    input [1023:0] in,
    input [7:0] sel,
    output [3:0] out
);
    
    // 計算起始索引
    wire [9:0] start_index = sel * 4;
    
    // 使用 [start_index +: width] 語法
    // 從 start_index 開始，選擇 4 個位元
    assign out = in[ start_index +: 4 ]; 

endmodule

module top_module( 
    input [1023:0] in,
    input [7:0] sel,
    output [3:0] out );

    assign out = {in[sel*4+3], in[sel*4+2], in[sel*4+1], in[sel*4+0]};

endmodule
