module top_module( 
    input [254:0] in,
    output [7:0] out );
integer i;

    always @(*) begin
        // 重置計數器
        out = 8'd0; 
        
        // 迴圈遍歷輸入向量的每一個位元
        for (i = 0; i <= 254; i = i + 1) begin
            if (in[i] == 1'b1) begin
                out = out + 1'b1; // 如果是 '1'，計數器加一
            end
        end
    end


endmodule
